Package: scpoisson
Title: Single Cell Poisson Probability Paradigm
Version: 0.0.1
Authors@R: c(
    person("Yue", "Pan", email = "yuep027@gmail.com", role = c("aut", "cre")),
    person("Justin", "Landis", email = "jtlandis314@gmail.com", role = c("aut"),
